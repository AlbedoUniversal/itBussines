{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "$": "readonly"
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": true,
        "peerDependencies": true
      }
    ],
    "no-console": "off"
  },
  "settings": {
    "import/extensions": ["warn", "ignorePackages"]
  }
}
